# HUELLA BLE PWA - Variables de entorno
# Copiar este archivo a .env y configurar según necesidad

# Entorno de ejecución
NODE_ENV=production

# Puerto del servidor (Azure usa process.env.PORT automáticamente)
PORT=8080

# Configuración de logging
LOG_LEVEL=info

# Azure Application Insights (opcional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-key-here

# Configuración de seguridad (opcional)
SESSION_SECRET=your-secret-key-here
CORS_ORIGIN=https://huella-ble-control.azurewebsites.net

# Configuración de cache (opcional)
CACHE_MAX_AGE=31536000

# Feature flags (opcional)
ENABLE_DEBUG_MODE=false
ENABLE_ANALYTICS=false

# Configuración del dispositivo (opcional, se puede sobrescribir desde la UI)
DEFAULT_DEVICE_PIN=123456
DEFAULT_SAMPLE_RATE=250
DEFAULT_MEASURE_RANGE=2

# URLs de API (si se integra con backend)
API_BASE_URL=https://api.huella-ble.com
API_KEY=your-api-key-here

# Almacenamiento blob (si se usa para backups)
AZURE_STORAGE_CONNECTION_STRING=your-connection-string-here

# Notificaciones (si se implementan)
PUSH_NOTIFICATION_KEY=your-push-key-here

# Límites de la aplicación
MAX_STREAMING_DURATION=300
MAX_EXPORT_RECORDS=10000
MAX_STORAGE_SIZE_MB=50
